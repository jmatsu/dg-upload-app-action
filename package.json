{
  "name": "typescript-action",
  "version": "0.2.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/*.ts src/**/*.ts",
    "lint:fix": "eslint src/*.ts src/**/*.ts --fix",
    "release": "rm -fr lib && npm run build && ncc build --source-map",
    "test": "yarn test-unit",
    "test-unit": "jest --testRegex=\"/__tests__/.*\\.test\\.ts\"",
    "test-smoke": "yarn build && jest --testRegex=\"/__smoke_tests__/.*\\.test\\.ts\"",
    "test-all": "yarn build && jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmatsu/upload-to-deploygate.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "jmatsu",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "axios": "^0.21.1",
    "form-data": "^3.0.0",
    "fs": "^0.0.1-security",
    "tmp": "^0.2.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/parser": "^2.8.0",
    "@zeit/ncc": "^0.20.5",
    "dotenv": "^8.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.13.1",
    "lint-staged": "^10.2.2",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ],
    "src/**/*.ts": [
      "eslint --fix"
    ]
  }
}
